/**index.wxss**/
page {
    background: #fff;
}
.container {
    height: 100%;
    box-sizing: border-box;
    font-size: 33rpx;
}
.header {
    display: flex;
    flex-direction: row;
    width: 100%;
    text-align: center;
    background: #f8f8fa;
    border-bottom: 1px solid #ededed;
    margin-bottom: 20px;
}
.header text {
    padding: 10px;
    flex: auto;
}
.header text.active {
    background: #555;
    color: #fff;
}
.form {
    background: #fff;
    padding: 0 10px;
}
.form .form-group {
    display: flex;
    padding: 10px;
    border-bottom: 1px solid #eee;
}
.form .form-error {
    padding-top: 10px;
    color: #ff3838;
    text-align: center;
}
.form .form-group:last-child {
    border-bottom: 0;
}
.form .form-group input {
    flex-grow: 1;
    padding: 0 10px;
    text-align: right;
}
.form button {
    margin-top: 20px;
    font-size: 38rpx;
    border-radius: 50rpx;
    font-weight: bold;
}
.table-container {
    margin-top: 15px;
    padding: 10px;
}
.table {
    background: #fff;
}
.table .theader {
    border-bottom: 1px solid #eee;
}
.table .tr {
    width: 100%;
    display: flex;
    flex-wrap: nowrap;
    justify-content: space-between;
    align-items: center;
    white-space: nowrap;
}
.table .th,
.table .td {
    padding: 6px;
    width: 100%;
    text-align: center;
}
.table .tr .th {
    font-weight: bold;
}
.red {
    color: #ff3838;
}
.color9 {
    color: #999;
}
.through {
    text-decoration: line-through;
}
.table .tr .td .through {
    margin-left: 10px;
}
.tips {
    padding: 10px 0;
    margin: 10px 0;
    border-top: 1px solid #eee;
    border-bottom: 1px solid #eee;
    font-size: 28rpx;
    color: #999;
}
.em {
    font-weight: bold;
    color: #333;
}